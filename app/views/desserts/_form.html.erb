<%= form_for(@dessert) do |f| %>
  <div class="row">
    <div class="medium-6 medium-centered columns">
      <div class="input-group">
        <span class="input-group-label"><%= f.label :name, "Dessert Name" %></span>
          <%= f.text_field :name, class: "input-group-field" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="medium-6 medium-centered columns">
      <div class="input-group big-description">
        <span class="input-group-label"><%= f.label :description, "Dessert Description" %></span>
          <%= f.text_area :description, class: "input-group-field big-description"%>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="medium-6 medium-centered columns">
      <div class="action">
        <%= f.submit "Submit", class: :button %>
      </div>
    </div>
  </div>
<% end %>
